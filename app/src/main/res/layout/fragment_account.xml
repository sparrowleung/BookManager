<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/account_card1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="5dp"

            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:id="@+id/account_changeIamge"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/account_image"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/account" />

                    <TextView
                        android:text="更换头像"
                        android:textSize="11dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:background="?android:selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="昵        称 ："
                            android:layout_width="0dp"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:layout_height="25dp"
                            android:gravity="center"
                            />
                        <TextView
                            android:text="yuyang.liang"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="30dp"
                            android:textSize="14sp"
                            android:id="@+id/account_account"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:text="手  机  号 ：" />
                        <TextView
                            android:text="1892***3***"
                            android:paddingLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="30dp"
                            android:textSize="14sp"
                            android:id="@+id/account_number"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#22221111"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/account_card2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="账号设置"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="50dp" />

                <ImageView
                    android:id="@+id/account_more"
                    android:src="@drawable/more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:id="@+id/account_card3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="密码" />

                        <EditText
                            android:id="@+id/account_passwrod"
                            android:layout_width="0dp"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:layout_weight="4" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            android:text="昵称" />

                        <EditText
                            android:id="@+id/account_nickname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="4" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:textSize="14sp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="部门" />

                        <EditText
                            android:id="@+id/account_part"
                            android:layout_width="0dp"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:text="小组" />

                        <EditText
                            android:id="@+id/account_tg"
                            android:layout_width="0dp"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />

                        <Button
                            android:id="@+id/account_commit"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:gravity="end|center"
                            android:paddingRight="10dp"
                            android:text="修改" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33331111"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/account_card4"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="退出登录"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="50dp" />

                <ImageView
                    android:src="@drawable/more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp" />

            </LinearLayout>

            <View
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#22221111"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>